@model HospitalApplication.Models.Patient
@{
    ViewData["Title"] = "PatientPanel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .btn-block {
        margin-bottom: 15px;
    }

    .card {
        border: 1px solid #ddd; /* Kart kenarlık rengi */
        border-radius: 8px; /* Kart köşe yuvarlama */
    }

    .card-body {
        padding: 20px;
    }

    .rounded-circle {
        border: 3px solid #007bff; /* Mavi renkte sınırla */
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-4">Patient Panel</h2>

    <div class="row justify-content-center">
        <!-- Değişiklik burada -->
        <div class="col-md-4">
            <!-- Değişiklik burada -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Bilgilerimi Güncelle</h5>
                    <a asp-controller="Patients" asp-action="UpdateProfile" asp-route-id="@Model.Id" class="btn btn-primary btn-block">Bilgilerimi Güncelle</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <!-- Değişiklik burada -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Randevularım</h5>
                    <a asp-controller="Patients" asp-action="Appointments" asp-route-id="@Model.Id" class="btn btn-info btn-block">Randevularım</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <!-- Değişiklik burada -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Raporlarım</h5>
                    <a asp-controller="Patients" asp-action="Reports" asp-route-id="@Model.Id" class="btn btn-success btn-block">Raporlarım</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <img src="~/pictures/patients.jpg" alt="Patient" class="img-fluid rounded-circle" />
        </div>
    </div>
</div>