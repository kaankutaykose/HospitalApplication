@model HospitalApplication.Models.Patient
@{
    ViewData["Title"] = "Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Başlık kısmı -->
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body text-center">
            <h2 class="text-primary">Welcome, @Model.Name!</h2>
            <h5>Your upcoming appointments</h5>
        </div>
    </div>
</div>

<!-- Randevu Tablosu -->
<div class="container mt-4">
    @if (Model.Appointments.Any())
    {
        <table class="table table-hover table-bordered shadow-sm mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>Tarih</th>
                    <th>Doktor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model.Appointments)
                {
                    <tr>
                        <td>@appointment.AppointmentDate?.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@appointment.Doctor.Name @appointment.Doctor.Surname</td> <!-- Doktor bilgisi burada -->
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center mt-3">
            <p>No appointments found.</p>
        </div>
    }
</div>

<!-- Randevu Al Butonu -->
<div class="container mt-4 text-center">
    <a asp-controller="Patients" asp-action="BookAppointment" asp-route-id="@Model.Id" class="btn btn-lg btn-success shadow-sm">📅 Randevu Al</a>
</div>
